Author: Mateusz ≈Åukasik <mati75@linuxmint.pl>
Bug-Debian: http://bugs.debian.org/754207

--- a/data/rc.xml
+++ b/data/rc.xml
@@ -245,9 +245,9 @@
   <keybind key="A-space">
     <action name="ShowMenu"><menu>client-menu</menu></action>
